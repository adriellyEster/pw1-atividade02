{
  "compilerOptions": {
    "emitDecoratorMetadata": true,  
    "experimentalDecorators": true,
    "target": "es2021",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  
  "include": [
    "src/**/*",
  ]
}
